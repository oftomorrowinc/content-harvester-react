{
  "name": "@content-harvester/react",
  "version": "1.0.0",
  "description": "A React TypeScript component library for collecting content from URLs and files with Firebase backend support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "dev": "concurrently \"npm run emulators\" \"npm run storybook\"",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "emulators": "firebase emulators:start --only firestore,storage",
    "emulators:ui": "firebase emulators:start --only firestore,storage,ui",
    "emulators:export": "firebase emulators:export ./firebase-emulator-data",
    "emulators:import": "firebase emulators:start --import=./firebase-emulator-data --only firestore,storage",
    "emulators:clear": "firebase emulators:exec --only firestore 'rm -rf firebase-emulator-data'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "example:setup": "cd examples/nextjs-example && npm install",
    "example:dev": "concurrently \"npm run emulators\" \"cd examples/nextjs-example && npm run dev\"",
    "example:build": "cd examples/nextjs-example && npm run build",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "semantic-release"
  },
  "keywords": [
    "react",
    "typescript",
    "firebase",
    "content",
    "harvester",
    "upload",
    "url",
    "file",
    "drag-drop",
    "component-library"
  ],
  "author": "Content Harvester Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/content-harvester/react.git"
  },
  "homepage": "https://github.com/content-harvester/react#readme",
  "bugs": {
    "url": "https://github.com/content-harvester/react/issues"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "firebase": ">=9.0.0"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "react-hot-toast": "^2.4.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "firebase": "^10.7.1",
    "firebase-tools": "^13.0.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.6.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "semantic-release": "^22.0.12",
    "storybook": "^7.6.6",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}